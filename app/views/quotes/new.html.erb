<% unless @quote.errors.none? %>
  <% @quote.errors.full_messages.each do |msg| %>
    <%= msg %>
  <% end %>
<% end %>


<%= form_for @quote do |f| %>
	<%= f.label :provider %>
	<%= f.text_field :provider %>

	<%= f.label :price %>
	<%= f.number_field :price %>

	<%= f.label :info %>
	<%= f.text_field :info %>

	<!-- drop down to select services, selected service needs to fill the foreign key on create -->
	<%= collection_select :quote, :service_id, Service.all, :id, :service_name %>

	<!-- grab user id to fill foreign key on create -->
	<%= f.submit => "drop_down" %>

<% end %>