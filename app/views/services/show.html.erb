<% service = Service.find(params[:id]) %>
<h1><%= service[:service_name] %></h1>

<p>insert the service info here</p>

<section class="quotes">
	<h4>Quotes:</h4>	

	<% quotes = Quote.where(service_id:service.id) %>
	<table>
		<tr>
			<td>Provider</td>
			<td>Price</td>
			<td>Info</td>
			<td>Creater</td>
		</tr>
		<% quotes.each do |q| %>
			<% creator = User.find(q[:id]) %>
			<tr>
				<td><%= q.provider %></td>
				<td><%= q.price %></td>
				<td><%= q.info %></td>
				<td><%= creator.first_name %> <%= creator.last_name %></td>
			</tr>
		<% end %>
	</table>
</section>

<% if User.find(session[:user_id])[:admin] == true %>
	<%= link_to "Add a quote", new_quote_path %><br><br>
<% end %>

<br>
<%= link_to "User Pannel", user_path(session[:user_id]) %>
<%= link_to "Return to Services", services_path %>